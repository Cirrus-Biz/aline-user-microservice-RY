pipeline {
    environment {
        registryEndpoint = 'aline-user-ry'
        registryURL = credentials('AWS-ECR-URL')
        registryCredential = 'ry-aws-credentials'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Package') { 
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true clean package' 
            }
        }
        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv(installationName: 'sonarqube') {
                    sh 'mvn sonar:sonar'
                }
            } 
        }
        stage('Build') {
            steps {
                script {
                    dockerImage = docker.build registryURL + registryEndpoint + ":$GIT_COMMIT"
                }
            }
        }
        stage('Deploy Image') {
            steps {
                script {
                    docker.withRegistry("https://" + registryURL + registryEndpoint + "ecr:us-east-1:" + registryCredential) {
                        dockerImage.push()
                    }
                }
            }
        }
        stage ('Clean Up') {
            steps {
                sh 'docker rmi $registry:${GIT_COMMIT}'
            }
        }
    }
}





