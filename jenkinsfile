pipeline {
    environment {
        registry = "noodleween/aline-user-ry"
        registryCredential = 'dockerhub'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Package') { 
            steps {
                sh 'mvn clean package -DskipTests' 
            }
        }
        stage('Build') {
            steps {
                script {
                    dockerImage = docker.build registry + ":corretto.$BUILD_NUMBER"
                }
            }
        }
        stage('Dockerhub Push') {
            steps {
                script {
                    docker.withRegistry( '', registryCredential) {
                        dockerImage.push()
                    }
                }
            }
        }
        stage ('Clean Up') {
            steps {
                sh 'docker rmi $registry:corretto.$BUILD_NUMBER'
            }
        }
    }
}