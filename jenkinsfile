pipeline {
    environment {
        registryEndpointCredential = 'aline-user-ry'
        registryUrlCredential = "Cirrus-Business-ECR-URL"
        registryCredential = 'ry-aws-credential'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Package') { 
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true clean package' 
            }
        }
        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv(installationName: 'sonarqube') {
                    sh 'mvn sonar:sonar'
                }
            } 
        }
        stage('Build') {
            steps {
                script {
                    dockerImage = docker.build registryUrlCredential + registryEndpointCredential + ":${GIT_COMMIT}"
                }
            }
        }
        stage('Deploy Image') {
            steps {
                script {
                    docker.withRegistry("https://" + registryUrlCredential + registryEndpointCredential + "ecr:us-east-1:" + registryCredential) {
                        dockerImage.push()
                    }
                }
            }
        }
        stage ('Clean Up') {
            steps {
                sh 'docker rmi $registry:${GIT_COMMIT}'
            }
        }
    }
}





