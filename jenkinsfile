pipeline {
    agent {
        docker {
            image 'maven:3.8.1-adoptopenjdk-11' 
            args '-v /root/.m2:/root/.m2' 
        }
    }
    stages {
        stage('Core Checkout'){
            steps {
                git 'https://github.com/Cirrus-Biz/core.git'
            }
        }
        stage('Build') { 
            steps {
                sh 'mvn clean package -DskipTests' 
            }
        }
    }
}